{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "graphql/**/*.ts",
    "graphql/resolver/**/*.ts",
    "graphql/schema/**/*.ts",
    "utils/**/*.ts",
    "types/**/*.ts",
    "services/**/*.ts",
    "db/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
